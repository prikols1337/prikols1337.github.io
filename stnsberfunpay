    <!-- Звук взрыва (короткий URL на mp3) -->
    <!-- Используем внешний CDN. Если ссылка умрет, звук просто не проиграется -->
    <audio id="boom-sound" src="https://www.myinstants.com/media/sounds/zhostkii-ston.mp3" preload="auto"></audio>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const app = document.getElementById('app');
            const fxLayer = document.getElementById('fx-layer');
            const audio = document.getElementById('boom-sound');

            // Настройка звука (уменьшим громкость, чтобы не оглушить)
            audio.volume = 1;

            app.addEventListener('click', (e) => {
                triggerExplosion();
            });

            function triggerExplosion() {
                // 1. Сброс и проигрывание звука
                audio.currentTime = 0;
                audio.play().catch(err => console.log('Audio autoplay blocked needs interaction first'));

                // 2. Визуальный эффект "Вспышка" (Flash)
                const flash = document.createElement('div');
                flash.classList.add('flash');
                fxLayer.appendChild(flash);

                // Анимация вспышки
                flash.animate([
                    { opacity: 1 },
                    { opacity: 0 }
                ], {
                    duration: 300,
                    easing: 'ease-out'
                }).onfinish = () => flash.remove();

                // 3. Визуальный эффект "Взрыв" (Shockwave)
                const shockwave = document.createElement('div');
                shockwave.classList.add('shockwave');
                fxLayer.appendChild(shockwave);

                shockwave.animate([
                    { transform: 'translate(-50%, -50%) scale(0)', opacity: 1 },
                    { transform: 'translate(-50%, -50%) scale(25)', opacity: 0 }
                ], {
                    duration: 600,
                    easing: 'cubic-bezier(0, 0.5, 0.5, 1)'
                }).onfinish = () => shockwave.remove();

                // 4. Частицы (Debris)
                const colors = ['#ff4d4d', '#ffaa00', '#ffffff', '#333333'];
                const particleCount = 30;

                for (let i = 0; i < particleCount; i++) {
                    const p = document.createElement('div');
                    p.classList.add('particle');
                    // Случайный цвет
                    p.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    fxLayer.appendChild(p);

                    // Математика разлета
                    const angle = Math.random() * Math.PI * 2;
                    const velocity = 100 + Math.random() * 200; // Дистанция полета
                    const tx = Math.cos(angle) * velocity;
                    const ty = Math.sin(angle) * velocity;

                    p.animate([
                        { transform: 'translate(-50%, -50%) scale(1)', opacity: 1 },
                        { transform: `translate(calc(-50% + ${tx}px), calc(-50% + ${ty}px)) scale(0)`, opacity: 0 }
                    ], {
                        duration: 500 + Math.random() * 300,
                        easing: 'cubic-bezier(0, .9, .57, 1)'
                    }).onfinish = () => p.remove();
                }

                // 5. Тряска экрана (Screen Shake)
                app.animate([
                    { transform: 'translate(0, 0)' },
                    { transform: 'translate(-5px, 5px)' },
                    { transform: 'translate(5px, -5px)' },
                    { transform: 'translate(-5px, -5px)' },
                    { transform: 'translate(0, 0)' }
                ], {
                    duration: 200,
                    iterations: 1
                });
            }
        });
    </script>
